{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2019",
		"lib": ["es2020", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": "./",
		"paths": {
			"src/*": ["src/*"],
			"Modules/*": ["src/Modules/*"],
			"tests/*": ["tests/*"]
		}
	}
}
