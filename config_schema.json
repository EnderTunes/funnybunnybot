{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "token",
    "owner",
    "prefixes"
  ],
  "properties": {
    "token": {
      "type": "string"
    },
    "owner": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "prefixes": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 1
      }
    },
    "privateChannels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      },
      "default": []
    },
    "noLogServers": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      },
      "default": []
    },
    "noLogChannels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[0-9]+$"
      },
      "default": []
    },
    "allowCustomColors": {
      "type": "boolean",
      "default": false
    },
    "minecraft": {
      "type": "object",
      "properties": {
        "ip": {
          "type": "string"
        },
        "port": {
          "type": "integer"
        }
      },
      "default": null
    },
    "mumble": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "apiKey": {
          "type": "string"
        }
      },
      "default": null
    },
    "starbound": {
      "type": "object",
      "properties": {
        "statusImage": {
          "type": "url"
        }
      },
      "default": null
    }
  }
}